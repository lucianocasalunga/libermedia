  <script>
    async function loginExtensao() {
      if (!window.nostr || !window.nostr.getPublicKey) {
        alert("Extensão Nostr (NIP-07) não detectada.");
        return;
      }
      try {
        const pubkey = await window.nostr.getPublicKey();
        // Redireciona para login já com pubkey preenchida
        window.location.href = "/login?pubkey=" + encodeURIComponent(pubkey);
      } catch (e) {
        alert("Não foi possível obter a chave pública da extensão.");
      }
    }
  </script>
